// {{ datetime_info }}

#ifndef FONTS_H
#define FONTS_H

#include <stdint.h>

struct Glyph {
    char character;
    uint32_t offset;
    uint16_t size;
    uint16_t width;
    uint16_t height;
};

{% for font in fonts %}
extern const uint8_t sdf_data_{{ font.name }}[];
extern const struct Glyph glyphs_{{ font.name }}[];
{% endfor %}

struct Font {
    uint8_t size;
    const uint8_t* sdf_data;
    const struct Glyph* glyphs;
    uint16_t glyph_count;
};

enum FontName {
{%- for font in fonts %}
    FONT_{{ font.name|upper }}{{ "," if not loop.last else "" }}
{%- endfor %}
};

static const struct Font fonts[] = {
{%- for font in fonts %}
    { {{ font.size }}, sdf_data_{{ font.name }}, glyphs_{{ font.name }}, {{ font.glyphs|length }} },
{%- endfor %}
};

/**
 * Binary seach to find the glyph we want
 * 
 * @param font Is the one in the enumerator.
 * @param c Is the character we're searching for.
 * @return Pointer to the Glyph is found, NULL if not found.
 */
const struct Glyph* find_glyph(enum FontName font, char c);

#endif // FONTS_H
