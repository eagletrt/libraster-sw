{%- for g in font.glyphs %}
    { '{{ g.char }}', {{ g.offset }}, {{ g.size }}, {{ g.width }}, {{ g.height }} },  // '{{ g.char }}'
{%- endfor %}
};
{% endfor %}

const Glyph* find_glyph(FontName font, char c) {
    const Font* f = &fonts[font];
    int low = 0;
    int high = f->glyph_count - 1;

    while (low <= high) {
        int mid = (low + high) / 2;
        char mid_char = f->glyphs[mid].character;

        if (mid_char == c)
            return &f->glyphs[mid];
        else if (mid_char < c)
            low = mid + 1;
        else
            high = mid - 1;
    }

    return 0; // Not found
}

