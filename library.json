{
  "$schema": "https://raw.githubusercontent.com/platformio/platformio-core/develop/platformio/assets/schema/library.json",
  "name": "LibRaster",
  "version": "0.2.0",
  "description": "A simple library that provides a way to define and raster a graphic layout",
  "keywords": [
    "graphics", "rasterizer", "embedded"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/eagletrt/libraster-sw"
  },
  "authors": [
    {
      "name": "Alessandro Bridi",
      "email": "ale.bridi15@gmail.com",
      "maintainer": true
    }
  ],
  "license": "AGPL-3.0-only",
  "frameworks": "*",
  "platforms": "*",
  "headers": [
      "raster.h",
      "raster-api.h",
      "fontutils.h",
      "fontutils-api.h"
  ],
  "examples": [
      {
          "name": "Demo using direct rendering of glyphs",
          "base": "examples",
          "files": [ "direct-font-rendering.c" ]
      }
  ],
  "export": {
    "include": [
      "src/**",
      "include/**"
    ]
  },
  "scripts": {
      "postinstall": "tools/generator.py"
  }
}
